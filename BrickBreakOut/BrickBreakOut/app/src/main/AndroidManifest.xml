<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanj.brickbreakout">

    <application
        android:allowBackup="true"
        android:icon="@drawable/breakouticon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyCustomTheme">
        <intent-filter>
            <action android:name ="android.intent.action.MAIN" />
            <category android:name = "android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".BreakOutGameScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ScoreTheme" />
        <activity
            android:name=".ScoreDisplayActivity"
            android:label="GAME OVER"
            android:theme="@style/Theme.ScoreTheme" />
        <activity
            android:name=".HighScoreActivity"
            android:label="LEADER BOARD"
            android:theme="@style/Theme.ScoreTheme" />
        <activity
            android:name=".HelpScreen"
            android:label="HELP"
            android:theme="@style/Theme.MyCustomTheme" />
    </application>

</manifest>